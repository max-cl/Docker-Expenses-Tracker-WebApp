{
    "name": "server",
    "version": "1.0.0",
    "author": "max-cl",
    "license": "GNU",
    "description": "Server - Expenses Tracker",
    "main": "app.js",
    "scripts": {
        "db:migrate": "sequelize db:migrate",
        "db:migrate:undo": "sequelize db:migrate:undo",
        "db:drop": "sequelize db:drop",
        "build": "tsc -p .",
        "clean": "rm -rf dist",
        "build-start": "rm -rf dist && tsc -p . && node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/app.js",
        "start": "sequelize db:migrate && node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/app.js",
        "dev": "NODE_ENV=dev nodemon -r tsconfig-paths/register src/app.ts",
        "test": "NODE_ENV=test mocha --check-leaks -r tsconfig-paths/register -r ts-node/register \"test/**/*.spec.ts\""
    },
    "dependencies": {
        "bcrypt": "^5.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "helmet": "^4.2.0",
        "joi": "^17.3.0",
        "jsonwebtoken": "^8.5.1",
        "mysql2": "^2.2.5",
        "nodemailer": "^6.4.17",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "sequelize": "^6.3.5",
        "sequelize-cli": "^6.2.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/body-parser": "^1.19.0",
        "@types/chai": "^4.2.14",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.9",
        "@types/joi": "^14.3.4",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.16",
        "@types/nodemailer": "^6.4.0",
        "@types/passport": "^1.0.4",
        "@types/passport-jwt": "^3.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.10",
        "@types/validator": "^13.1.2",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "chai-json-schema": "^1.5.1",
        "mocha": "^8.2.1",
        "nodemon": "^2.0.7",
        "supertest": "^6.0.1",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.3"
    }
}
